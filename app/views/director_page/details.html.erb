<% directors_movie = Movie.where({:director_id => @person.id})%>

  <tr>
  <% directors_movie.each do |movie| %>
    <td>
    <%= movie.id %> 
    </td>

    <td>
      <img src="<%= movie.image %> " style="width:250px;">
    </td>

    <td>
      <%= movie.title %> 
    </td>

    <td>
      <%= movie.year %> 
    </td>

    <td>
      <%= @person.name %>
    </td>

    <td>
      <a href="/movies/<%= movie.id %>">
        Show details
      </a>
    </td>
   
  </tr>
   <%end%>
</tbody></table>
