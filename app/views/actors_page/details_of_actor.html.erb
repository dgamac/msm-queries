<body>
  

    <h1>
  Actor # <%= @actor_info.id %> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
   <%= @actor_info.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor_info.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor_info.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @actor_info.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @actor_info.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @actor_info.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tbody><tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  
  
   <% @characters.each do |char| %>

   <% movie_info = Movie.where({:id => char.movie_id})[0] %>

    <tr>
      <td>
        <%= movie_info.title%>
      </td>

      <td>
        <%= movie_info.year%>
      </td>
      <% movie = Movie.where({:id => char.movie_id})[0]%>

      <% director_info = Director.where({:id => movie.director_id})[0] %>
      
      <td>
        <%= director_info.name %>
        
      </td>

      <td>
        <%= char.name %>
      </td>

      <td>
        <a href="/movies/<%= char.movie_id %>">
          Show details
        </a>
      </td>
    </tr>
    <%end%>
</tbody></table>

  

</body>
